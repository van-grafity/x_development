<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="app_journal_report_template">
            <table width="100%">
                <tr>
                    <td colspan="3" width="50%">
                        <!-- <img t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" style="max-height: 100px;"/> -->
                        <img class="img" src="/x_development/static/img/ic_qm.png" style="width:82%; height: auto;"/>
                    </td>
                    <td class="text-right" rowspan="4" width="30%"/>
                    <td class="text-center" rowspan="4" width="20%">
                    </td>
                </tr>
            </table>

            <div class="fsize-24" style="text-align:center; margin-bottom: 8px;">
                <span style="font-size: 24px;"><b>Journals Entries</b></span>
            </div>
            
            <br/>
            <br/>
            <br/>
            <br/>

            <table width="100%" style="font-size: 14px; border: 0px;">
                <tr>
                    <th width="10%">Date</th>
                    <td><span t-field="o.gender"/></td>
                    <th width="10%">Journal</th>
                    <td><span t-field="o.gender"/></td>
                </tr>
                <tr>
                    <td><p/></td>
                </tr>
                <tr>
                    <th width="10%">Reference</th>
                    <td width="48%"><span t-field="o.gender"/></td>
                    <th width="10%">Company</th>
                    <td><span t-field="o.gender"/></td>
                </tr>
            </table>

            <br/>

            <table width="100%" class="table table-condensed table-bordered" style="font-size: 14px;">
                <thead>
                    <tr>
                        <th class="text-center">No</th>
                        <th class="text-center">Account</th>
                        <th class="text-center">Partner</th>
                        <th class="text-center">Label</th>
                        <th colspan="2" class="text-center">Debit</th>
                        <th colspan="2" class="text-center">Credit</th>
                    </tr>
                </thead>
                
                <tbody>
                    <t t-set="i" t-value="0"/>
                    <t t-set="sum_amount" t-value="0"/>
                    <t t-set="sum_amount" t-value="0"/>
                    <t t-foreach="o.line_ids" t-as="line">
                    <t t-set="sum_amount" t-value="sum_amount+line.amount"/>
                    <t t-set="sum_amount" t-value="sum_amount+line.amount"/>
                    <t t-set="i" t-value="i+1"/>
                        <tr>
                            <td><span class="text-nowrap" t-esc="i"/></td>
                            <td><span class="text-nowrap" t-field="line.car_name"/></td>
                            <td><span class="text-nowrap" t-field="line.car_name"/></td>
                            <td></td>
                            <td class="text-right" width="3%" style="border-right: none !important;">Rp.</td>
                            <td class="text-right" width="10%" style="border-left: none !important;"><span t-esc="'{:,.2f}'.format(line.amount)"/></td>
                            <td class="text-right" width="3%" style="border-right: none !important;">Rp.</td>
                            <td class="text-right" width="10%" style="border-left: none !important;"><span t-esc="'{:,.2f}'.format(line.amount)"/></td>
                        </tr>
                    </t>
                    <tr>
                        <td class="text-right" colspan="4"><b>TOTAL</b></td>
                        <td class="text-right" width="3%" style="border-right: none !important;">Rp.</td>
                        <td class="text-right" width="10%" style="border-left: none !important;"><span t-esc="'{:,.2f}'.format(sum_amount)"/></td>
                        <td class="text-right" width="3%" style="border-right: none !important;">Rp.</td>
                        <td class="text-right" width="10%" style="border-left: none !important;"><span t-esc="'{:,.2f}'.format(sum_amount)"/></td>
                    </tr>
                </tbody>
            </table>

            <table width="100%" style="font-size: 12px;">
                <tr>
                    <td width="83%"><span t-esc="o.gender"/></td>
                    <td width="2%"></td>
                    <td width="15%"><b></b></td>
                </tr>
            </table>

            <br/>
            <br/>
            <br/>
            
            <table width="100%" style="font-size: 12px; margin-left: 18px;">
                <tr>
                    <td style="padding:2px;" class="text-center">Dibuat</td>
                    <td style="padding:0px;" class="text-center"/>
                    <td style="padding:2px;" class="text-center">Diperiksa</td>
                    <td style="padding:0px;" class="text-center"/>
                    <td style="padding:2px;" class="text-center">Diverifikasi</td>
                    <td style="padding:0px;" class="text-center"/>
                    <td style="padding:2px;" class="text-center">Disetujui</td>
                    <td style="padding:0px;" class="text-center"/>
                    <td style="padding:2px;" class="text-center">Diterima Oleh</td>
                    <td style="padding:0px;" class="text-center"/>
                </tr>
                <tr>
                    <td width="15%" style="padding:2px;" class="text-center"><br/><br/><br/><br/><br/><br/></td>
                    <td width="5%" style="padding:0px;" class="text-center"/>
                    <td width="15%" style="padding:2px;" class="text-center"><br/><br/><br/><br/><br/><br/></td>
                    <td width="5%" style="padding:0px;" class="text-center"/>
                    <td width="15%" style="padding:2px;" class="text-center"><br/><br/><br/><br/><br/><br/></td>
                    <td width="5%" style="padding:0px;" class="text-center"/>
                    <td width="15%" style="padding:2px;" class="text-center"><br/><br/><br/><br/><br/><br/></td>
                    <td width="5%" style="padding:0px;" class="text-center"/>
                    <td width="15%" style="padding:2px;" class="text-center"><br/><br/><br/><br/><br/><br/></td>
                    <td width="5%" style="padding:0px;" class="text-center"/>
                </tr>
                <tr>   
                    <td style="border-top:1px solid black;padding:2px;" class="text-center"></td>
                    <td width="1%" style="padding:0px;"/>
                    <td style="border-top:1px solid black;padding:2px;" class="text-center"></td>
                    <td width="1%" style="padding:0px;"/>
                    <td style="border-top:1px solid black;padding:2px;" class="text-center"></td>
                    <td width="1%" style="padding:0px;"/>
                    <td style="border-top:1px solid black;padding:2px;" class="text-center"></td>
                    <td width="1%" style="padding:0px;"/>
                    <td style="border-top:1px solid black;padding:2px;" class="text-center"></td>
                    <td width="1%" style="padding:0px;"/>
                </tr>
                  
            </table>
            <br/>
            <hr/>               
        </template>

        <template id="app_journal_print_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <t t-call="x_development.app_journal_report_template"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <record id="paperjournal_a4_no_header" model="report.paperformat">
            <field name="name">Paper Journal No Header</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">80</field>
        </record>

         <record id="action_report_journal_print" model="ir.actions.report">
            <field name="name">Journal</field>
            <field name="model">order.model</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">x_development.app_journal_print_report</field>
            <field name="report_file">x_development.app_journal_print_report</field>
            <field name="binding_model_id" ref="model_order_model"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperjournal_a4_no_header"/>
        </record>
    </data>

</odoo>